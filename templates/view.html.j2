{%extends 'header.html.j2' %}

{% block title %} CRUD - {{nombre_tabla|capitalize}} {% endblock %}

{% block contenido %}

<div class="">

  <div class="container">
    <div class="row">
      <div class="col lg-12">
        <div class="jumbotron p-3">
          <h2>CRUD Vista <b>{{nombre_tabla|capitalize}} </b>
            <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#mymodal">Agregar</button></h2>
          <br>
          <table class="table table-hover table-ligth">
            <thead class="thead-dark">
              <tr>
                {% for columna in nombres %}
                <th>{{columna|capitalize}}</th>
                {% endfor %}

                <th style="text-align: center">Actions</th>
              </tr>

            </thead>
            <tbody>
              {% for row in data %}
              <tr>

                {% for item in row %}
                <td>{{item}}</td>
                {% endfor %}

                <td style="text-align: center">

                  <a href="" class="btn btn-outline-primary btn-xs" data-toggle="modal" data-target="#modaledit{{row.0}}">Editar</a>

                  <button type="button" class="btn btn-danger btn-xs" data-toggle="modal" data-target="#confirm_eliminar{{row.0}}">
                    Eliminar
                  </button>

                </td>
              </tr>

              {% endfor %}
            </tbody>
          </table>
        </div>

      </div>
    </div>
  </div>

  {% endblock %}
