{% extends 'base.html.jinja' %}
{%include 'header.html.jinja' %}

{% block title %} Home {% endblock %}

{% block body %}

<div class="">


  <div class="container">
    <div class="row">
      <div class="col lg-12">
        <div class="jumbotron p-3">
          <h2>CRUD Tabla <b>{{nombre_tabla}} </b>
          <button type="button" class="btn btn-success float-right" data-toggle="modal" data-target="#mymodal">Agregar</button></h2>
          <br>
          <table class="table table-hover table-ligth">
            <thead class="thead-dark">
              <tr>
                {% for columna in nombres %}
                  <th>{{columna}}</th>
                {% endfor %}
              </tr>
            </thead>
            <tbody>
              {% for row in data %}
              <tr>

                {% for item in row %}
                  <td>{{item}}</td>
                {% endfor %}
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
